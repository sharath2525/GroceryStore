@model Category

<partial name="_Notification"/>
<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2 ">
            <h2 class="text-primary " style="color:black">Edit Category</h2>
            </hr>
        </div>
        <hr />
        <div class="mb-3 row p-1 ">
            <label asp-for="CategoryName" style="font-size:20px"></label>
            <input asp-for="CategoryName"  disabled class="form-control" />
       

        </div>

        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" style="font-size:20px"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
   
        </div>
        <hr />
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</form>


