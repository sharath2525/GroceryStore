@model GroceryStore.Models.ShoppingCart
@{
    ViewData["Title"] = "Product Details";
}
<div class="container py-5">
    <input hidden asp-for="ProductId" />
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg">
                <img src="@Model.Product.ImageUrl" class="img-fluid rounded-3 product-detail-image" alt="@Model.Product.ProductName">
            </div>
        </div>
        <!-- Product Details -->
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h1 class="display-5 fw-bold text-success mb-4">@Model.Product.ProductName</h1>
                <div class="mb-4">
                    <h3 class="text-muted">@Model.Product.Price.ToString("C")</h3>
                    <small class="text-muted">per item</small>
                </div>
                <div class="mb-4">
                    <h4 class="text-dark mb-3">Description</h4>
                    <p class="lead description-text">@Model.Product.Description</p>
                </div>
                <form  method="post">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <div class="row align-items-center mb-4">
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-dark text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Quantity
                                    </span>
                                    <input asp-for="Count"     type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-dark btn-lg w-100 py-3">
                                 <i class="fas fa-cart-plus me-2"></i>Add to Cart
                             </button>

                        </div>
                    </div>
                </form>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-success btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

    <style>
        .product-detail-image {
            max-height: 600px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

            .product-detail-image:hover {
                transform: scale(1.02);
            }

        .description-text {
            line-height: 1.8;
            font-size: 1.1rem;
            color: #444;
        }

        .card {
            border-radius: 15px;
            border: 2px solid #28a745;
        }

        .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25);
        }

        .btn-success {
            background: #28a745;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                background: #218838;
                transform: scale(1.02);
            }
    </style>

