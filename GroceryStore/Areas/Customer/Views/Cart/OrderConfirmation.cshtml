@model int 


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h2>Order Confirmation</h2>
            </div>
            <div class="card-body">
                <p>Thank you for your order! Your order number is <strong>@Model</strong>.</p>
                <p>We appreciate your time and hope you enjoy your purchase.</p>
                <a href="/" class="btn text-white bg-dark">Continue Shopping</a>
            </div>
        </div>
    </div>
</body>
</html>